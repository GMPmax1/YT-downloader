{
  "name": "youtube-bulk-downloader",
  "version": "1.0.0",
  "description": "Desktop app for bulk downloading YouTube videos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": ["youtube", "downloader", "electron", "desktop"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "ytdl-core": "^4.11.5",
    "yt-dlp-wrap": "^1.2.0"
  },
  "build": {
    "appId": "com.yourname.youtube-downloader",
    "productName": "YouTube Bulk Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css"
    ]
  }
}